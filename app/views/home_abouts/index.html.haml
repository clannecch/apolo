- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item HomeAbout.model_name.human, home_abouts_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => HomeAbout.model_name.human).titlecase , new_home_about_path(@home_about), :class => "btn success" 
  - if @home_abouts.any?
    = link_to t('scaffold.actions.export').titlecase, home_abouts_path( :format => 'pdf'), :class => "btn info"

- if @home_abouts.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :detalle, @home_abouts.human_attribute_name('detalle')
      %th.last

    - @home_abouts.each do |item|
      %tr
        %td= item.detalle
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_home_about_path(item)
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete
    .clear
    .block{:style => 'margin:20px;'}= paginate(@home_abouts)
  .clear
.clear
