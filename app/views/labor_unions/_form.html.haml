= form_for(@labor_union) do |f|
  - if @labor_union.errors.any?
    #error_explanation
      %h2
        = pluralize(@labor_union.errors.count, "error")
        prohibited this labor_union from being saved:
      %ul
        - @labor_union.errors.full_messages.each do |msg|
          %li= msg
  %table.tableForm
    %tr
      %td.columnLabel
        = f.label :detalle, :class => "apsLabel"
      %td.columnData
        = f.text_field :detalle, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
