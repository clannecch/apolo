- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item LaborUnion.model_name.human, labor_unions_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => LaborUnion.model_name.human).titlecase , new_labor_union_path(@labor_union), :class => "btn success" 
  - if @labor_unions.any?
    = link_to t('scaffold.actions.export').titlecase, labor_unions_path( :format => 'pdf'), :class => "btn info"

- if @labor_unions.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :detalle, @labor_unions.human_attribute_name('detalle')
      %th.last

    - @labor_unions.each do |item|
      %tr
        %td= item.detalle
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_labor_union_path(item)
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete
    .clear
    .block{:style => 'margin:20px;'}= paginate(@labor_unions)
  .clear
.clear
