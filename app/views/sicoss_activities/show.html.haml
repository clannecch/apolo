

- content_for(:title) do
  %h1= [t('scaffold.actions.show'), SicossActivity.model_name.human].join(' ').titlecase

- content_for(:controls) do
  = controls do |control|
    - control.item t('scaffold.actions.edit').titlecase, edit_sicoss_activity_path(@sicoss_activity), :icon => 'application_edit'
    - control.item t('scaffold.actions.back').titlecase, :back, :icon => 'application_view_list'

= semantic_attributes_for(@sicoss_activity) do |s|
  = s.attributes(SicossActivity.human_name + ' Info') do

    = s.attribute :code

    = s.attribute :name


.clear