= form_for(@sicoss_condition) do |f|
  - if @sicoss_condition.errors.any?
    #error_explanation
      %h2
        = pluralize(@sicoss_condition.errors.count, "error")
        prohibited this sicoss_condition from being saved:
      %ul
        - @sicoss_condition.errors.full_messages.each do |msg|
          %li= msg
  .clear
  %br/
  .form_box
    .form_box_title
      %span.title= SicossCondition.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :name, :class => "apsLabel"
        %td.columnData
          = f.text_field :name, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = f.text_field :code, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
