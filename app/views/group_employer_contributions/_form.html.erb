<%= form_for @group_employer_contribution do |f| %>
	<% if @group_employer_contribution.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@group_employer_contribution.errors.count, "error") %> prohibido guardar Grupo de Aporte:</h2>
			<ul>
			<% @group_employer_contribution.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :detalle %></strong></td>
			<td style="width:70%">
				<%= f.text_field :detalle %>
			</td>
        </tr>
        <tr>
            <td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label "Composicion" %></strong></td>
            <td style="width:70%">
               <%= f.collection_select :employer_contribution_concept_ids, EmployerContributionConcept.all, :id, :detalle, {}, :multiple => true%>
            </td>

		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
