

- content_for(:title) do
  %h1= [t('scaffold.actions.show'), SicossFormatEmployer.model_name.human].join(' ').titlecase

- content_for(:controls) do
  = controls do |control|
    - control.item t('scaffold.actions.edit').titlecase, edit_sicoss_format_employer_path(@sicoss_format_employer), :icon => 'application_edit'
    - control.item t('scaffold.actions.back').titlecase, :back, :icon => 'application_view_list'

= semantic_attributes_for(@sicoss_format_employer) do |s|
  = s.attributes(SicossFormatEmployer.human_name + ' Info') do

    = s.attribute :sicoss_format_id, :value => @sicoss_format_employer.try( :sicoss_format ).try(:name)

    = s.attribute :field_type

    = s.attribute :formula


.clear