- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item ReciboSueldo.model_name.human, recibo_sueldos_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => ReciboSueldo.model_name.human).titlecase , new_recibo_sueldo_path(@recibo_sueldo), :class => "btn success" 
  - if @recibo_sueldos.any?
    = link_to t('scaffold.actions.export').titlecase, recibo_sueldos_path( :format => 'pdf'), :class => "btn info"

- if @recibo_sueldos.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :liquidacion_id, @recibo_sueldos.human_attribute_name('liquidacion_id')
      %th= sort_link @search, :employee_id, @recibo_sueldos.human_attribute_name('employee_id')
      %th= sort_link @search, :fecha_recibo, @recibo_sueldos.human_attribute_name('fecha_recibo')
      %th= sort_link @search, :observaciones, @recibo_sueldos.human_attribute_name('observaciones')
      %th= sort_link @search, :mensaje_recibo, @recibo_sueldos.human_attribute_name('mensaje_recibo')
      %th= sort_link @search, :fecha_calculo, @recibo_sueldos.human_attribute_name('fecha_calculo')
      %th.last

    - @recibo_sueldos.each do |item|
      %tr
        %td= item.liquidacion_id
        %td= item.employee_id
        %td= item.fecha_recibo
        %td= item.observaciones
        %td= item.mensaje_recibo
        %td= item.fecha_calculo
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_recibo_sueldo_path(item)
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete
    .clear
    .block{:style => 'margin:20px;'}= paginate(@recibo_sueldos)
  .clear
.clear
