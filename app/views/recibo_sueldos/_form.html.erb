    <div class="field">
      <h3>Haberes</h3>
      <div id="detalle_recibo_haber">
        <table class="field">
          <tr>
             <th><%= f.label "Concepto Retencion" %></th>
             <th><%= f.label "Detalle Personalizado" %></th>
             <th><%= f.label "Centro Costo" %></th>
             <th><%= f.label "Cantidad" %></th>
             <th><%= f.label "Importe" %></th>
             <th>&nbsp;</th>
          </tr>
          <%= f.fields_for :detalle_recibo_habers do |drh| %>
            <%= render 'detalle_recibo_haber_fields', :f => drh %>
          <% end %>
        </table>
        <div class="links">
          <%= link_to_add_association 'Agregar Haber', f, :detalle_recibo_habers %>
        </div>
      </div>
    </div>

    <div class="field">
      <h3>Retenciones</h3>
      <div id="detalle_recibo_retencion">
        <table class="field">
          <tr>
             <th><%= f.label "Concepto Retencion" %></th>
             <th><%= f.label "Detalle Personalizado" %></th>
             <th><%= f.label "Cantidad" %></th>
             <th><%= f.label "Importe" %></th>
             <th>&nbsp;</th>
          </tr>
          <%= f.fields_for :detalle_recibo_retencions do |drh| %>
            <%= render 'detalle_recibo_retencion_fields', :f => drh %>
          <% end %>
        </table>
        <div class="links">
          <%= link_to_add_association 'Agregar retencion', f, :detalle_recibo_retencions %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
