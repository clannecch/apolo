<%= form_for([@liquidacion,@recibo_sueldo]) do |f| %>
  <% if @recibo_sueldo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recibo_sueldo.errors.count, "error") %> prohibited this recibo_sueldo from being saved:</h2>

      <ul>
      <% @recibo_sueldo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Liquidacion Periodo: <%= @liquidacion.periodo %> Quincena: <%= @liquidacion.quincena%> Tipo liquidacion: <%=@liquidacion.tipo_recibo.try(:detalle)%></h3>
  <% if @recibo_sueldo.new_record? %>
    <div class="field">
        <%= f.label :employee_id %><br />
        <%= f.collection_select :employee_id, Employee.all, :id, :full_name , :prompt => true %>
    </div>
  <% else %>
    <h4>Empleado: <%@recibo_sueldo.employee.apellido %>, <%= @recibo_sueldo.employee.nombre %> </h4>
  <% end %>
   <table class="field">

   <tr>
     <th><%= f.label "Fecha Recibo" %></th>
     <th><%= f.label "Observaciones" %></th>
     <th><%= f.label "Mensaje Recibo" %></th>
   <tr>
   <tr>
     <td><%= f.date_select :fecha_recibo %></td>
     <td><%= f.text_field :observaciones %></td>
     <td><%= f.text_field :mensaje_recibo %></td>
   </tr>
   </table>

