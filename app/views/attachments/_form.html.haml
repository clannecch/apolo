= form_for(@attachment) do |f|
  - if @attachment.errors.any?
    #error_explanation
      %h2
        = pluralize(@attachment.errors.count, "error")
        prohibited this attachment from being saved:
      %ul
        - @attachment.errors.full_messages.each do |msg|
          %li= msg
  .clear
  %br/
  .form_box
    .form_box_title
      %span.title= Attachment.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :attachable_id, :class => "apsLabel"
        %td.columnData
          = f.text_field :attachable_id, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :attachable_type, :class => "apsLabel"
        %td.columnData
          = f.text_field :attachable_type, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :associated_document_type_id, :class => "apsLabel"
        %td.columnData
          = f.collection_select :associated_document_type_id, AssociatedDocumentType.all, :id, :name, {:class => "apsSelect"}
      %tr
        %td.columnLabel
          = f.label :name, :class => "apsLabel"
        %td.columnData
          = f.text_field :name, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :reception_date, :class => "apsLabel"
        %td.columnData
          = f.text_field :reception_date, :class => "apsDatetime"
      %tr
        %td.columnLabel
          = f.label :adjunto_file_name, :class => "apsLabel"
        %td.columnData
          = f.text_field :adjunto_file_name, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :adjunto_content_type, :class => "apsLabel"
        %td.columnData
          = f.text_field :adjunto_content_type, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :associated_document_type, :class => "apsLabel"
        %td.columnData
          = f.text_field :associated_document_type, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :adjunto_file, :class => "apsLabel"
        %td.columnData
          = f.text_field :adjunto_file, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
