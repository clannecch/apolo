
- content_for(:title) do
  %h1= t('scaffold.actions.list', :item => EmployeeDocument.model_name.human).titlecase

%table
  %tr


    %th= EmployeeDocument.human_attribute_name('id_employee')

    %th= EmployeeDocument.human_attribute_name('name')


    %th
    %th
    %th

  - @employee_documents.each do |employee_document|
    %tr
      %td= image_tag employee_document.document.url(:thumb)

      %td= employee_document.id_employee

      %td= employee_document.name

      %td= link_to t('scaffold.actions.show').titlecase, employee_document
      %td= link_to t('scaffold.actions.edit').titlecase, edit_employee_document_path(employee_document)
      %td= link_to t('scaffold.actions.destroy').titlecase, employee_document, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete

%br

= link_to t('scaffold.actions.new', :item => EmployeeDocument.model_name.human).titlecase, new_employee_document_path

