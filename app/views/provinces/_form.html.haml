= form_for(@province) do |f|
  - if @province.errors.any?
    #error_explanation
      %h2
        = pluralize(@province.errors.count, "error")
        prohibited this province from being saved:
      %ul
        - @province.errors.full_messages.each do |msg|
          %li= msg
  .clear
  %br/
  .form_box
    .form_box_title
      %span.title= Province.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = f.text_field :detalle, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = f.text_field :code, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :country_id, :class => "apsLabel"
        %td.columnData
          = f.collection_select :country_id, Country.all, :id, :detalle, {:class => "apsSelect"}
  .actions
    = f.submit :class => "btn success"
