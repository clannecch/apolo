<% content_for(:head) do %>
    <%=javascript_tag do %>
        $( ".datepicker" ).datepicker({
            changeMonth: true,
            changeYear: true
        });
    <% end %>
    <style>
      .field_periodo{
          float:left;
          width:33%;
      }

       .actions{
          clear:both;
      }
    </style>

<% end %>

<%= form_for(@liquidacion) do |f| %>
  <% if @liquidacion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@liquidacion.errors.count, "error") %> prohibited this liquidacion from being saved:</h2>

      <ul>
      <% @liquidacion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field_periodo">
    <%= f.label :Periodo %>
    <%= f.date_select :periodo, :discard_day => true %>
  </div>

  <div class="field">
    <%= f.label :quincena %>
    <%= f.text_field :quincena , :size => 2%>
  </div>

  <div class="field">
    <%= f.label :tipo_recibo_id %><br />
    <%= f.collection_select :tipo_recibo_id, TipoRecibo.all, :id, :detalle, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :fecha_liquidacion %><br />
    <%= f.text_field :fecha_liquidacion ,:class => 'datepicker'%>

  </div>
  <div class="field">
    <%= "Banco ultimo deposito:"%><br />
    <%= f.collection_select :bank_deposit_id, BankDeposit.all, :id, :detalle, :prompt => true %>
  </div>
  <div class="field"
    <%= f.label :periodo_deposito %><br />
    <%= f.date_select :periodo_deposito, :discard_day => true %>
  </div>
  <div class="field">
    <%= f.label :fecha_deposito %><br />
    <%= f.text_field :fecha_deposito,:class => 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :fecha_cierre %><br />
    <%= f.text_field :fecha_cierre,:class => 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :techo_retenciones %><br />
    <%= f.text_field :techo_retenciones %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
