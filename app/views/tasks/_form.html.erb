<%= form_for @task do |f| %>
	<% if @task.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@task.errors.count, "error") %> prohibido guardar Tarea:</h2>
			<ul>
			<% @task.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :detalle %></strong></td>
			<td style="width:70%">
				<%= f.text_field :detalle %>
			</td>
		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
