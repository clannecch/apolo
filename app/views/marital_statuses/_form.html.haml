= form_for(@marital_status) do |f|
  - if @marital_status.errors.any?
    #error_explanation
      %h2
        = pluralize(@marital_status.errors.count, "error")
        prohibited this marital_status from being saved:
      %ul
        - @marital_status.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :detalle
    %br/
    = f.text_field :detalle
  .actions
    = f.submit
