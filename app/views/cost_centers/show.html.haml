- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item CostCenter.model_name.human, cost_centers_path 
    - breadcrumb.item "#{@cost_center.detalle.titlecase}", nil, :active => true

= link_to t('scaffold.actions.edit').titlecase, edit_cost_center_path(@cost_center), :class => "btn success" |
= link_to t('scaffold.actions.destroy').titlecase, @cost_center, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete, :class => "btn danger"
.clear
%br/
= form_for(@cost_center) do |f|
  = render 'shared/errorhandler', :obj_errors => @cost_center.errors
  .form_box
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = @cost_center.code
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = @cost_center.detalle
      %tr
        %td.columnLabel
          = f.label :default, :class => "apsLabel"
        %td.columnData
          = check_box_tag "cost_center_default", @cost_center.default, @cost_center.default, :disabled => true
.clear
