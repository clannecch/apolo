= form_for(@cost_center) do |f|
  - if @cost_center.errors.any?
    #error_explanation
      %h2
        = pluralize(@cost_center.errors.count, "error")
        prohibited this cost_center from being saved:
      %ul
        - @cost_center.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :detalle
    %br/
    = f.text_field :detalle
  .actions
    = f.submit
