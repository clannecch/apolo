- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item CostCenter.model_name.human, cost_centers_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => CostCenter.model_name.human).titlecase , new_cost_center_path(@cost_center), :class => "btn success" 
  - if @cost_centers.any?
    = link_to t('scaffold.actions.export').titlecase, cost_centers_path( :format => 'pdf'), :class => "btn info"

- if @cost_centers.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :detalle, @cost_centers.human_attribute_name('detalle')
      %th.last

    - @cost_centers.each do |item|
      %tr
        %td= item.detalle
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_cost_center_path(item)
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete
    .clear
    .block{:style => 'margin:20px;'}= paginate(@cost_centers)
  .clear
.clear
