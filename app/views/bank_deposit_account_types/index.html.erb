<h1>Tipos de Cuentas Bancarias</h1>

<table class="tableStandard">
	<tr>
		<th><%= sort_link @search, :detalle, "Detalle" %></td>
		<th colspan='3' style="text-align:center;">Acciones</th>
	</tr>
	<% for bank_deposit_account_type in @bank_deposit_account_types %>
		<tr>
			<td><%= bank_deposit_account_type.detalle %></td>
            <td><a href="/bank_deposit_account_types/<%= bank_deposit_account_type.id.to_s %>"><img alt="Ver" src="images/icons/16x16/application_get.png" title="Ver" /></a></td>
            <td><a href="/bank_deposit_account_types/<%= bank_deposit_account_type.id.to_s %>/edit"><img alt="Editar" src="images/icons/16x16/application_edit.png" title="Editar" /></a></td>
            <td><a href="/bank_deposit_account_types/<%= bank_deposit_account_type.id.to_s %>" data-confirm="Esta ud. seguro?" data-method="delete" rel="nofollow">
				<img alt="Eliminar" src="images/icons/16x16/application_delete.png" title="Eliminar" /></a>
			</td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Nuevo Tipo de Cuenta Bancaria", new_bank_deposit_account_type_path %></p>

<%= paginate @bank_deposit_account_types %>
