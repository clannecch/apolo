<%= form_for @bank_deposit_account_type do |f| %>
	<% if @bank_deposit_account_type.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@bank_deposit_account_type.errors.count, "error") %> prohibido guardar Tipo de Cuenta Bancaria:</h2>
			<ul>
			<% @bank_deposit_account_type.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :detalle %></strong></td>
			<td style="width:70%">
				<%= f.text_field :detalle %>
			</td>
		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
