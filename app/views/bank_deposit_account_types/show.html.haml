- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item BankDepositAccountType.model_name.human, bank_deposit_account_types_path 
    - breadcrumb.item "#{@bank_deposit_account_type.detalle.titlecase}", nil, :active => true

= link_to t('scaffold.actions.edit').titlecase, edit_bank_deposit_account_type_path(@bank_deposit_account_type), :class => "btn success" |
= link_to t('scaffold.actions.destroy').titlecase, @bank_deposit_account_type, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete, :class => "btn danger"
.clear
%br/
= form_for(@bank_deposit_account_type) do |f|
  = render 'shared/errorhandler', :obj_errors => @bank_deposit_account_type.errors
  .form_box
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = @bank_deposit_account_type.detalle
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = @bank_deposit_account_type.code
.clear
