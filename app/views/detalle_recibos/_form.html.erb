<%= form_for @detalle_recibo do |f| %>
	<% if @detalle_recibo.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@detalle_recibo.errors.count, "error") %> prohibido guardar Detalle Recibo:</h2>
			<ul>
			<% @detalle_recibo.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :recibo_sueldo_id %></strong></td>
			<td style="width:70%">
				<%= f.text_field :recibo_sueldo_id %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :remunerative_concept_id %></strong></td>
			<td style="width:70%">
				<%= f.collection_select :remunerative_concept_id, RemunerativeConcept.all, :id, :detalle, :include_blank => 'Sin datos' %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :retention_concept_id %></strong></td>
			<td style="width:70%">
				<%= f.collection_select :retention_concept_id, RetentionConcept.all, :id, :detalle, :include_blank => 'Sin datos' %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :detalle %></strong></td>
			<td style="width:70%">
				<%= f.text_field :detalle %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :type %></strong></td>
			<td style="width:70%">
				<%= f.text_field :type %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :cost_center_id %></strong></td>
			<td style="width:70%">
				<%= f.collection_select :cost_center_id, CostCenter.all, :id, :detalle, :include_blank => 'Sin datos' %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :cantidad %></strong></td>
			<td style="width:70%">
				<%= f.text_field :cantidad %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :importe %></strong></td>
			<td style="width:70%">
				<%= f.text_field :importe %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :total %></strong></td>
			<td style="width:70%">
				<%= f.text_field :total %>
			</td>
		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
