= form_for(@employee_retention_concept) do |f|
  = render 'shared/errorhandler', :obj_errors => @employee_retention_concept.errors
  .clear
  .form_box
    .form_box_title
    /  %span.title= EmployeeRetentionConcept.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :employee_id, :class => "apsLabel"
        %td.columnData
          = f.text_field :employee_id, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :retention_concept_id, :class => "apsLabel"
        %td.columnData
          = f.collection_select :retention_concept_id, RetentionConcept.all, :id, :detalle, {:class => "apsSelect"}, {:include_blank => 'Sin datos'}
      %tr
        %td.columnLabel
          = f.label :cantidad, :class => "apsLabel"
        %td.columnData
          = f.text_field :cantidad, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :importe, :class => "apsLabel"
        %td.columnData
          = f.text_field :importe, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :fecha_inicio, :class => "apsLabel"
        %td.columnData
          = f.text_field :fecha_inicio, :value => @employee_retention_concept.fecha_inicio.to_s, :class => "apsDatetime"
      %tr
        %td.columnLabel
          = f.label :fecha_final, :class => "apsLabel"
        %td.columnData
          = f.text_field :fecha_final, :value => @employee_retention_concept.fecha_final.to_s, :class => "apsDatetime"
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = f.text_field :detalle, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
