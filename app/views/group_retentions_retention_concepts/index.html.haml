- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item GroupRetentionsRetentionConcept.model_name.human, group_retentions_retention_concepts_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => GroupRetentionsRetentionConcept.model_name.human) , new_group_retentions_retention_concept_path(@group_retentions_retention_concept), :class => "btn success" 
  - if @group_retentions_retention_concepts.any?
    = link_to t('scaffold.actions.export').titlecase, "/print_table?tablename=" + GroupRetentionsRetentionConcept.model_name, :class => "btn info"

- if @group_retentions_retention_concepts.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :group_retention_id, @group_retentions_retention_concepts.human_attribute_name('group_retention_id')
      %th= sort_link @search, :retention_concept_id, @group_retentions_retention_concepts.human_attribute_name('retention_concept_id')
      %th.last

    - @group_retentions_retention_concepts.each do |item|
      %tr
        %td= item.group_retention_id
        %td= item.retention_concept_id
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item, :rel => "twypsy", :title => t('scaffold.actions.show').titlecase
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_group_retentions_retention_concept_path(item), :rel => "twypsy", :title => t('scaffold.actions.show').titlecase
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete, :rel => "twypsy", :title => t('scaffold.actions.show').titlecase
    .clear
    .block{:style => 'margin:20px;'}= paginate(@group_retentions_retention_concepts)
  .clear
.clear
