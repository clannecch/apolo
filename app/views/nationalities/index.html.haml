- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item Nationality.model_name.human, nationalities_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => Nationality.model_name.human).titlecase , new_nationality_path(@nationality), :class => "btn success" 
  - if @nationalities.any?
    = link_to t('scaffold.actions.export').titlecase, nationalities_path( :format => 'pdf'), :class => "btn info"

- if @nationalities.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :detalle, @nationalities.human_attribute_name('detalle')
      %th.last

    - @nationalities.each do |item|
      %tr
        %td= item.detalle
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_nationality_path(item)
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete
    .clear
    .block{:style => 'margin:20px;'}= paginate(@nationalities)
  .clear
.clear
