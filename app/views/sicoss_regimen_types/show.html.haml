

- content_for(:title) do
  %h1= [t('scaffold.actions.show'), SicossRegimenType.model_name.human].join(' ').titlecase

- content_for(:controls) do
  = controls do |control|
    - control.item t('scaffold.actions.edit').titlecase, edit_sicoss_regimen_type_path(@sicoss_regimen_type), :icon => 'application_edit'
    - control.item t('scaffold.actions.back').titlecase, :back, :icon => 'application_view_list'

= semantic_attributes_for(@sicoss_regimen_type) do |s|
  = s.attributes(SicossRegimenType.human_name + ' Info') do

    = s.attribute :code

    = s.attribute :name


.clear