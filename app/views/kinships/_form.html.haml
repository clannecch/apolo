= form_for(@kinship) do |f|
  = render 'shared/errorhandler', :obj_errors => @kinship.errors
  .clear
  .form_box
    .form_box_title
    /  %span.title= Kinship.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = f.text_field :code, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :name, :class => "apsLabel"
        %td.columnData
          = f.text_field :name, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :hijo_conyugue, :class => "apsLabel"
        %td.columnData
          = f.select :hijo_conyugue ,{"Otros" => "O","Hijo" => "H","Conyuge" => "C"},{ :prompt => "Seleccione un tipo de Documento"}
      %tr
        %td.columnLabel
          = f.label :default, :class => "apsLabel"
        %td.columnData
          = f.check_box :default, :class => "apsCheckbox"
  .actions
    = f.submit :class => "btn success"
