<%= form_for @associated_document_type do |f| %>
	<% if @associated_document_type.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@associated_document_type.errors.count, "error") %> prohibido guardar Tipo de documento asociado:</h2>
			<ul>
			<% @associated_document_type.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :name %></strong></td>
			<td style="width:70%">
				<%= f.text_field :name %>
			</td>
		</tr>
      <tr>
          <td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label "Tipo de Documento" %></strong></td>
          <td style="width:70%">
              <%= f.select :document_type,{"Otros" => "O","Logo" => "L","Foto Principal" => "F"} %>
          </td>
      </tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
