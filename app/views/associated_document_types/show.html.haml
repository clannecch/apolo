- content_for(:title) do
  %h1= [t('scaffold.actions.show'), AssociatedDocumentType.model_name.human].join(' ').titlecase

- content_for(:controls) do
  = controls do |control|
    - control.item t('scaffold.actions.edit').titlecase, edit_associated_document_type_path(@associated_document_type), :icon => 'application_edit'
    - control.item t('scaffold.actions.back').titlecase, :back, :icon => 'application_view_list'

= semantic_attributes_for(@associated_document_type) do |s|
  = s.attributes(AssociatedDocumentType.human_name + ' Info') do

    = s.attribute :name
    = s.attribute :document_type

.clear