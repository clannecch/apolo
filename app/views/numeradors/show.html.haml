- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item Numerador.model_name.human, numeradors_path 
    - breadcrumb.item "#{@numerador.name.titlecase}", nil, :active => true

= link_to t('scaffold.actions.edit').titlecase, edit_numerador_path(@numerador), :class => "btn success" |
= link_to t('scaffold.actions.destroy').titlecase, @numerador, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete, :class => "btn danger"
.clear
%br/
= form_for(@numerador) do |f|
  = render 'shared/errorhandler', :obj_errors => @numerador.errors
  .form_box
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = @numerador.code
      %tr
        %td.columnLabel
          = f.label :name, :class => "apsLabel"
        %td.columnData
          = @numerador.name
      %tr
        %td.columnLabel
          = f.label :number, :class => "apsLabel"
        %td.columnData
          = @numerador.number
.clear
