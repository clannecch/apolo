= form_for(@data_to_ask) do |f|
  - if @data_to_ask.errors.any?
    #error_explanation
      %h2
        = pluralize(@data_to_ask.errors.count, "error")
        prohibited this data_to_ask from being saved:
      %ul
        - @data_to_ask.errors.full_messages.each do |msg|
          %li= msg
  %table.tableForm
    %tr
      %td.columnLabel
        = f.label :detalle, :class => "apsLabel"
      %td.columnData
        = f.text_field :detalle, :class => "apsTextbox"
    %tr
      %td.columnLabel
        = f.label :cantidad, :class => "apsLabel"
      %td.columnData
        = f.check_box :cantidad, :class => "apsCheckbox"
    %tr
      %td.columnLabel
        = f.label :importe, :class => "apsLabel"
      %td.columnData
        = f.check_box :importe, :class => "apsCheckbox"
  .actions
    = f.submit :class => "btn success"
