- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item SchemaMigration.model_name.human, schema_migrations_path , :active => true

= link_to t('scaffold.actions.edit').titlecase, edit_schema_migration_path(@schema_migration), :class => "btn success" |
= link_to t('scaffold.actions.destroy').titlecase, @schema_migration, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete, :class => "btn danger"
.clear
%br/
= form_for(@schema_migration) do |f|
  - if @schema_migration.errors.any?
    #error_explanation
      %h2
        = pluralize(@schema_migration.errors.count, "error")
        prohibited this schema_migration from being saved:
      %ul
        - @schema_migration.errors.full_messages.each do |msg|
          %li= msg
  %table.tableForm
    %tr
      %td.columnLabel
        = f.label :version, :class => "apsLabel"
      %td.columnData
        = @schema_migration.version
.clear
