- if @user_menu.count > 0
  #menu
    %ul.menu
      - @user_menu.select{|menu| menu[:parent_id] == nil }.sort_by{|s| s.order_no}.each do |level0|
        %li
          %a.parent{:href => (level0.link_url == "?" ? "#" : level0.link_url)}
            %span= level0.name
          - if @user_menu.select{|menu| menu[:parent_id] == level0.id }.count > 0
            / SEGUNDO NIVEL
            %div
              %ul
                - @user_menu.select{|menu| menu[:parent_id] == level0.id }.sort_by{|s| s.order_no}.each do |level1|
                  - if !level1.link_url.blank?
                    - if @user_menu.select{|menu| menu[:parent_id] == level1.id }.count == 0
                      %li
                        %a{:href => level1.link_url, :style => "text-align:left;padding-left:5px"}
                          %span= level1.name
                    - else
                      / TERCER NIVEL
                      %li
                        %a.parent{:href => (level1.link_url == "?" ? "#" : level1.link_url)}
                          %span= level1.name
                        %div
                          %ul
                            - @user_menu.select{|menu| menu[:parent_id] == level1.id }.sort_by{|s| s.order_no}.each do |level2|
                              - if !level2.link_url.blank?
                                - if @user_menu.select{|menu| menu[:parent_id] == level2.id }.count == 0
                                  / CUARTO NIVEL
                                  %li
                                    %a{:href => level2.link_url, :style => "text-align:left;padding-left:20px"}= level2.name
                                - else
                                  %li
                                    %a.parent{:href => (level2.link_url == "?" ? "#" : level2.link_url)}
                                      %span= level2.name
                                    %div
                                      %ul
                                        - @user_menu.select{|menu| menu[:parent_id] == level2.id }.sort_by{|s| s.order_no}.each do |level3|
                                          %li
                                            %a{:href => level3.link_url, :style => "text-align:left;padding-left:20px"}= level3.name
