= form_for(@remuneration_type) do |f|
  = render 'shared/errorhandler', :obj_errors => @remuneration_type.errors
  .clear
  %br/
  .form_box
    .form_box_title
    /  %span.title= RemunerationType.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = f.text_field :code, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = f.text_field :detalle, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :hora_dia_mes, :class => "apsLabel"
        %td.columnData
          = f.select( :hora_dia_mes ,{ "Hora" => "H", "Dia" => "D", "Mes" => "M"},{ :prompt => "Seleccione un tipo de Remuneracion"})
      %tr
        %td.columnLabel
          = f.label :default, :class => "apsLabel"
        %td.columnData
          = f.check_box :default, :class => "apsCheckbox"
  .actions
    = f.submit :class => "btn success"
