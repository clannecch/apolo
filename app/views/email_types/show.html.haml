- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item EmailType.model_name.human, email_types_path 
    - breadcrumb.item "#{@email_type.detalle.titlecase}", email_type_path(@email_type), :active => true

= link_to t('scaffold.actions.edit').titlecase, edit_email_type_path(@email_type), :class => "btn success" |
= link_to t('scaffold.actions.destroy').titlecase, @email_type, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete, :class => "btn danger"
.clear
%br/
= form_for(@email_type) do |f|
  - if @email_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@email_type.errors.count, "error")
        prohibited this email_type from being saved:
      %ul
        - @email_type.errors.full_messages.each do |msg|
          %li= msg
  %table.tableForm
    %tr
      %td.columnLabel
        = f.label :detalle, :class => "apsLabel"
      %td.columnData
        = @email_type.detalle
.clear
