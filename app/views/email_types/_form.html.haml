= form_for(@email_type) do |f|
  - if @email_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@email_type.errors.count, "error")
        prohibited this email_type from being saved:
      %ul
        - @email_type.errors.full_messages.each do |msg|
          %li= msg
  .clear
  %br/
  .form_box
    .form_box_title
      %span.title= EmailType.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = f.text_field :detalle, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
