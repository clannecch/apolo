= form_for(@user_authorization) do |f|
  - if @user_authorization.errors.any?
    #error_explanation
      %h2
        = pluralize(@user_authorization.errors.count, "error")
        prohibited this user_authorization from being saved:
      %ul
        - @user_authorization.errors.full_messages.each do |msg|
          %li= msg
  %table.tableForm
    %tr
      %td.columnLabel
        = f.label :user_id, :class => "apsLabel"
      %td.columnData
        = f.text_field :user_id, :class => "apsTextbox"
    %tr
      %td.columnLabel
        = f.label :authorization_id, :class => "apsLabel"
      %td.columnData
        = f.collection_select :authorization_id, Authorization.all, :id, :name, {:class => "apsSelect"}, {:include_blank => 'Sin datos'}
  .actions
    = f.submit :class => "btn success"
