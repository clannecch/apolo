= form_for(@group_remuneration) do |f|
  - if @group_remuneration.errors.any?
    #error_explanation
      %h2
        = pluralize(@group_remuneration.errors.count, "error")
        prohibited this group_remuneration from being saved:
      %ul
        - @group_remuneration.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :detalle
    %br/
    = f.text_field :detalle
  .field
    %h3 Codigos de Remuneraciones
    .field
      = f.label :detalle
      %br/
      = f.collection_select :remunerative_concept_ids, RemunerativeConcept.all, :id, :detalle, {}, :multiple => true
  .actions
    = f.submit
