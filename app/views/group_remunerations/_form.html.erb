<% content_for(:head) do %>
  <%= stylesheet_link_tag('chosen') %>
  <%= javascript_include_tag('chosen.jquery.min.js')	  %>
  <%= javascript_tag do %>
    $(".chosen_multi_select").chosen();
  <% end %>
<% end %>

<%= form_for @group_remuneration do |f| %>
	<% if @group_remuneration.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@group_remuneration.errors.count, "error") %> prohibido guardar Grupo de Remuneracion:</h2>
			<ul>
			<% @group_remuneration.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :detalle %></strong></td>
			<td style="width:70%">
				<%= f.text_field :detalle %>
			</td>
		</tr>
        <tr>
            <td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :composicion %></strong></td>
            <td style="width:70%">
               <%= f.collection_select :remunerative_concept_ids, RemunerativeConcept.all, :id, :detalle, {}, :multiple => true, :class => "chosen_multi_select" %>
            </td>
        </tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
