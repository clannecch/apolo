- content_for(:breadcrumbs) do
  = breadcrumbs do |breadcrumb|
    - breadcrumb.item current_company.name.titlecase, root_path
    - breadcrumb.item GroupRemuneration.model_name.human, group_remunerations_path, :active => true
.clear
- if true
  = link_to t('scaffold.actions.new', :item => GroupRemuneration.model_name.human).titlecase , new_group_remuneration_path(@group_remuneration), :class => "btn success" 
  - if @group_remunerations.any?
    = link_to t('scaffold.actions.export').titlecase, group_remunerations_path( :format => 'pdf'), :class => "btn info"

- if @group_remunerations.any?
  %table.tableStandard
    %tr
      %th= sort_link @search, :code, @group_remunerations.human_attribute_name('code')
      %th= sort_link @search, :detalle, @group_remunerations.human_attribute_name('detalle')
      %th= sort_link @search, :default, @group_remunerations.human_attribute_name('default')
      %th.last

    - @group_remunerations.each do |item|
      %tr
        %td= item.code
        %td= item.detalle
        %td= check_box_tag "activity_default", item.default, item.default, :disabled => true
        %td.last.actions
          = link_to icon('application_get', :small, :title => t('scaffold.actions.show').titlecase), item
          = link_to icon('application_edit', :small, :title => t('scaffold.actions.edit').titlecase), edit_group_remuneration_path(item)
          = link_to icon('application_delete', :small, :title => t('scaffold.actions.destroy').titlecase), item, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete
    .clear
    .block{:style => 'margin:20px;'}= paginate(@group_remunerations)
  .clear
.clear
