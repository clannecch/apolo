= form_for(@menu_role) do |f|
  - if @menu_role.errors.any?
    #error_explanation
      %h2
        = pluralize(@menu_role.errors.count, "error")
        prohibited this menu_role from being saved:
      %ul
        - @menu_role.errors.full_messages.each do |msg|
          %li= msg
  %table.tableForm
    %tr
      %td.columnLabel
        = f.label :menu_id, :class => "apsLabel"
      %td.columnData
        = f.collection_select :menu_id, Menu.all, :id, :name, {:class => "apsSelect"}, {:include_blank => 'Sin datos'}
    %tr
      %td.columnLabel
        = f.label :rol_id, :class => "apsLabel"
      %td.columnData
        = f.text_field :rol_id, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
