= form_for(@retention_concept) do |f|
  = render 'shared/errorhandler', :obj_errors => @retention_concept.errors
  .clear
  %br/
  .form_box
    .form_box_title
    /  %span.title= RetentionConcept.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :codigo, :class => "apsLabel"
        %td.columnData
          = f.text_field :codigo, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :detalle, :class => "apsLabel"
        %td.columnData
          = f.text_field :detalle, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :statistical_value, :class => "apsLabel"
        %td.columnData
          = f.text_field :statistical_value, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :accounting_imputation_id, :class => "apsLabel"
        %td.columnData
          = f.collection_select :accounting_imputation_id, AccountingImputation.all, :id, :detalle, {:class => "apsSelect"}
      %tr
        %td.columnLabel
          = f.label :prioridad, :class => "apsLabel"
        %td.columnData
          = f.text_field :prioridad, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :formula_calculo_valor, :class => "apsLabel"
        %td.columnData
          = f.text_field :formula_calculo_valor, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :acumuladores_valor, :class => "apsLabel"
        %td.columnData
          = f.text_field :acumuladores_valor, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :data_to_ask_id, :class => "apsLabel"
        %td.columnData
          = f.collection_select :data_to_ask_id, DataToAsk.all, :id, :detalle, {:class => "apsSelect"}
      %tr
        %td.columnLabel
          = f.label :auxiliar, :class => "apsLabel"
        %td.columnData
          = f.check_box :auxiliar, :class => "apsCheckbox"
  .actions
    = f.submit :class => "btn success"
