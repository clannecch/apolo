<h1>Categorias</h1>

<table class="tableStandard">
	<tr>
		<th><%= sort_link @search, :detalle, "Detalle" %></td>
		<th><%= sort_link @search, :importe, "Importe" %></td>
		<th colspan='3' style="text-align:center;">Acciones</th>
	</tr>
	<% for category in @categories %>
		<tr>
			<td><%= category.detalle %></td>
			<td><%= category.importe %></td>
            <td><a href="/categories/<%= category.id.to_s %>"><img alt="Ver" src="images/icons/16x16/application_get.png" title="Ver" /></a></td>
            <td><a href="/categories/<%= category.id.to_s %>/edit"><img alt="Editar" src="images/icons/16x16/application_edit.png" title="Editar" /></a></td>
            <td><a href="/categories/<%= category.id.to_s %>" data-confirm="Esta ud. seguro?" data-method="delete" rel="nofollow">
				<img alt="Eliminar" src="images/icons/16x16/application_delete.png" title="Eliminar" /></a>
			</td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Nueva Categoria", new_category_path %></p>

<%= paginate @categories %>
