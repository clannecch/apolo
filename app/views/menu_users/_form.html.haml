= form_for(@menu_user) do |f|
  - if @menu_user.errors.any?
    #error_explanation
      %h2
        = pluralize(@menu_user.errors.count, "error")
        prohibited this menu_user from being saved:
      %ul
        - @menu_user.errors.full_messages.each do |msg|
          %li= msg
  .clear
  %br/
  .form_box
    .form_box_title
      %span.title= MenuUser.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :menu_id, :class => "apsLabel"
        %td.columnData
          = f.collection_select :menu_id, Menu.all, :id, :name, {:class => "apsSelect"}, {:include_blank => 'Sin datos'}
      %tr
        %td.columnLabel
          = f.label :user_id, :class => "apsLabel"
        %td.columnData
          = f.text_field :user_id, :class => "apsTextbox"
  .actions
    = f.submit :class => "btn success"
