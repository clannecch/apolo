<%= form_for @menu_user do |f| %>
	<% if @menu_user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@menu_user.errors.count, "error") %> prohibido guardar Menu User:</h2>
			<ul>
			<% @menu_user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :menu_id %></strong></td>
			<td style="width:70%">
				<%= f.collection_select :menu_id, Menu.all, :id, :name %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :user_id %></strong></td>
			<td style="width:70%">
				<%= f.text_field :user_id %>
			</td>
		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
