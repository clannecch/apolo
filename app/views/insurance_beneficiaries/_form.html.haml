= form_for(@insurance_beneficiary) do |f|
  - if @insurance_beneficiary.errors.any?
    #error_explanation
      %h2
        = pluralize(@insurance_beneficiary.errors.count, "error")
        prohibited this insurance_beneficiary from being saved:
      %ul
        - @insurance_beneficiary.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Apellido"
    %br/
    = f.text_field :apellido
  .field
    = f.label "Nombre"
    %br/
    = f.text_field :nombre
  .field
    = f.label "Tipo de documento"
    %br/
    = f.collection_select :document_type_id,  DocumentType.all, :id, :detalle, :prompt => true
  .field
    = f.label "Numero de Documento"
    %br/
    = f.text_field :numero_documento
  .actions
    = f.submit
