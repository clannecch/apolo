= form_for(@sicoss_contract_mode) do |f|
  = render 'shared/errorhandler', :obj_errors => @sicoss_contract_mode.errors
  .clear
  .form_box
    .form_box_title
    /  %span.title= SicossContractMode.model_name.human
    %table.tableForm
      %tr
        %td.columnLabel
          = f.label :code, :class => "apsLabel"
        %td.columnData
          = f.text_field :code, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :name, :class => "apsLabel"
        %td.columnData
          = f.text_field :name, :class => "apsTextbox"
      %tr
        %td.columnLabel
          = f.label :default, :class => "apsLabel"
        %td.columnData
          = f.check_box :default, :class => "apsCheckbox"
  .actions
    = f.submit :class => "btn success"
